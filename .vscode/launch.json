{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Tests",
      "type": "node2",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [        
        "--require",
        "source-map-support/register",
        "--no-timeouts",
        ".tmp/test/"    
      ],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "debug",
      "internalConsoleOptions": "openOnSessionStart",
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "outFiles": [
        "./.tmp/**/*.js"        
      ]      
    }
  ]
}
