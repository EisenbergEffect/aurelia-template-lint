{
  "name": "aurelia-template-lint",
  "description": "sanity check of Aurelia-flavor templates",
  "author": "Meirion Hughes <crakinshot@yahoo.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/MeirionHughes/aurelia-template-lint"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "contributors": [
    {
      "name": "atsu85",
      "url": "https://github.com/atsu85"
    }
  ],
  "license": "(Apache-2.0)",
  "version": "0.10.0",
  "keywords": [
    "aurelia",
    "template",
    "html",
    "lint"
  ],
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "devDependencies": {
    "@types/chai": "^3.4.35",
    "@types/glob": "^5.0.29",
    "@types/minimatch": "^2.0.28",
    "@types/mocha": "^2.2.39",
    "@types/node": "^6.0.37",
    "@types/parse5": "0.0.30",
    "chai": "^3.5.0",
    "cross-env": "^3.2.3",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "source-map-support": "^0.4.11",
    "stream-to-string": "^1.1.0",
    "through2": "^2.0.3",
    "ts-node": "^2.1.0",
    "tslint": "^3.14.0"
  },
  "scripts": {
    "lint": "cross-env tslint --project tsconfig.json --config tslint.json",
    "clean": "cross-env rimraf .tmp .nyc_output coverage dist",
    "build": "cross-env tsc --project tsconfig.build.json --rootDir src/ --outDir dist/ --sourceMap",
    "debug": "npm run clean && cross-env tsc --project tsconfig.json --outDir ./.tmp/ ",
    "test": "nyc node_modules/mocha/bin/_mocha --require source-map-support/register --compilers ts:ts-node/register test/*.ts"
  },
  "dependencies": {
    "aurelia-binding": "^1.0.0",
    "aurelia-dependency-injection": "^1.0.0",
    "aurelia-pal-nodejs": "^1.0.0-alpha.4",
    "aurelia-polyfills": "^1.0.0",
    "aurelia-templating": "^1.0.0",
    "aurelia-templating-binding": "^1.0.0",
    "glob": "7.0.x",
    "parse5": "2.2.x",
    "rowan": "^0.2.1",
    "tslib": "^1.5.0",
    "typescript": "^2.3.1"
  },
  "nyc": {
    "exclude": [
      "node_modules/",
      "test/",
      "example.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
